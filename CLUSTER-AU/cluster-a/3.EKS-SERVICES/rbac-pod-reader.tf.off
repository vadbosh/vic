
module "pod_reader_rbac_multi" {
  source = "./modules/rbac-pod-reader"

  rbac_configs = [
    {
      namespace            = "thoth-production"
      service_account_name = "default"
    },
  ]
  depends_on = [kubernetes_namespace.namespaces]
}

output "created_role_names" {
  value = module.pod_reader_rbac_multi.role_names
}

output "created_role_binding_names" {
  value = module.pod_reader_rbac_multi.role_binding_names
}
